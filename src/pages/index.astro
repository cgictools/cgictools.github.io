---
import Breadcrumbs from '../components/Breadcrumbs.astro';
import Notepad from '../components/Notepad.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="CGIC Tools">
    <Breadcrumbs text="" />

    <main class="flex h-screen items-center justify-center pb-24">
        <div class="">
            <h1 class="pb-12 text-center text-4xl font-medium">CGIC Tools</h1>
            <div class="flex flex-row justify-around gap-12">
                <a
                    href="#"
                    class="cursor-not-allowed rounded-full border bg-zinc-400 px-6 py-3 shadow">
                    <h2 class="font-semibold">New Patients</h2>
                </a>
                <a
                    href="/egd-colo"
                    class="rounded-full border px-6 py-3 shadow hover:border-zinc-800 hover:bg-zinc-800 hover:text-white">
                    <h2 class="font-semibold">EGD/Colo</h2>
                </a>
                <a
                    href="/fibroscan"
                    class="rounded-full border px-6 py-3 shadow hover:border-zinc-800 hover:bg-zinc-800 hover:text-white">
                    <h2 class="font-semibold">Fibroscan</h2>
                </a>
                <a
                    href="/#"
                    class="cursor-not-allowed rounded-full border bg-zinc-400 px-6 py-3 shadow">
                    <h2 class="font-semibold">Capsule</h2>
                </a>
            </div>
        </div>
    </main>
</Layout>
