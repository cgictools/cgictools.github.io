---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
// import Instructions from '../components/egd-colo/ProcPacket.astro';
import PageHeading from '../components/PageHeading.astro';

import PointerSVG from '../components/svg/PointerSVG.astro';
import SubmitSVG from '../components/svg/SubmitSVG.astro';
import XSVG from '../components/svg/XSVG.astro';
import PhoneSVG from '../components/svg/PhoneSVG.astro';
import DocumentSVG from '../components/svg/DocumentSVG.astro';
import ShareSVG from '../components/svg/ShareSVG.astro';
import EnvelopeSVG from '../components/svg/EnvelopeSVG.astro';
import CopySVG from '../components/svg/CopySVG.astro';
import PaperclipSVG from '../components/svg/PaperclipSVG.astro';
---

<Layout title="Capsule - CGIC Tools">
    <Breadcrumbs text="Capsule" />
    <div x-data="capsule()">
        <main class="pb-24 print:hidden">
            <PageHeading text="Capsule Endoscopy scheduling" />
            <div class="grid grid-cols-2 divide-x">
                <section class="col-span-1">
                    <div
                        class="flex flex-row items-center justify-between pb-6 pr-8">
                        <div class="flex flex-row items-center gap-2">
                            <h2 class="text-lg font-semibold">Pre-Call</h2>
                            <PointerSVG />
                        </div>
                        <div>
                            <span
                                x-text="checkPre()"
                                x-on:mouseover="$dispatch('hoverpre')"
                                x-bind:class="checkPre() === 0 ? 'bg-green-200 text-green-700' : 'bg-red-200 text-red-700'"
                                class="rounded-full px-4 py-1 text-sm"></span>
                        </div>
                    </div>
                    <section class="grid grid-cols-1 gap-y-8 pb-8 pr-8">
                        <div class="grid grid-cols-2">
                            <div>
                                <h3
                                    x-ref="preReason"
                                    x-on:hoverpre.window="warnPreReason()"
                                    class="pb-2 font-medium">
                                    Reason
                                </h3>
                                <input
                                    type="text"
                                    x-model="reason"
                                    x-ref="reason"
                                    x-on:change="$nextTick(() => { warnPreReason() })"
                                    x-on:keyup.enter="$refs.reason.blur()"
                                    x-on:keyup.escape="reason = '' ; $nextTick(() => { $refs.reason.blur() }); $nextTick(() => { warnPreReason() })"
                                    class="rounded border border-zinc-400 px-2 py-0.5"
                                />
                            </div>
                            <div>
                                <h3
                                    x-ref="prePhysician"
                                    x-on:hoverpre.window="warnPrePhysician()"
                                    class="pb-2 font-medium">
                                    Physician
                                </h3>
                                <ul class="flex gap-x-6">
                                    <li class="select-none">
                                        <label
                                            for="H"
                                            x-on:click="$nextTick(() => { warnPrePhysician() })"
                                            class="p-1 pr-1.5">
                                            <input
                                                type="radio"
                                                id="H"
                                                value="H"
                                                x-on:click="$nextTick(() => { warnPrePhysician() })"
                                                x-model="physician"
                                                class="-ml-1 mr-0.5"
                                            />
                                             Dr. H
                                        </label>
                                    </li>
                                    <li class="select-none">
                                        <label
                                            for="T"
                                            x-on:click="$nextTick(() => { warnPrePhysician() })"
                                            class="p-1 pr-1.5">
                                            <input
                                                type="radio"
                                                id="T"
                                                value="T"
                                                x-on:click="$nextTick(() => { warnPrePhysician() })"
                                                x-model="physician"
                                                class="-ml-1 mr-0.5"
                                            />
                                             Dr. T
                                        </label>
                                    </li>
                                    <li class="select-none">
                                        <label
                                            for="M"
                                            x-on:click="$nextTick(() => { warnPrePhysician() })"
                                            class="p-1 pr-1.5">
                                            <input
                                                type="radio"
                                                id="M"
                                                value="M"
                                                x-on:click="$nextTick(() => { warnPrePhysician() })"
                                                x-model="physician"
                                                class="-ml-1 mr-0.5"
                                            />
                                             Dr. M
                                        </label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div>
                            <h3
                                x-ref="preFu"
                                x-on:hoverpre.window="warnPreFu()"
                                class="pb-2 font-medium">
                                Sched Follow-up?
                            </h3>
                            <ul>
                                <li class="select-none pb-1">
                                    <label
                                        for="yesFu"
                                        x-on:click="$nextTick(() => { warnPreFu() })"
                                        class="p-1 pr-1.5">
                                        <input
                                            type="radio"
                                            id="yesFu"
                                            value="yes"
                                            x-on:click="$nextTick(() => { warnPreFu() })"
                                            x-model="schedFu"
                                            class="-ml-1 mr-0.5"
                                        />
                                         yes
                                    </label>
                                </li>
                                <li class="select-none">
                                    <label
                                        for="noFu"
                                        x-on:click="$nextTick(() => { warnPreFu() })"
                                        class="p-1 pr-1.5">
                                        <input
                                            type="radio"
                                            id="noFu"
                                            value="no"
                                            x-on:click="$nextTick(() => { warnPreFu() })"
                                            x-model="schedFu"
                                            class="-ml-1 mr-0.5"
                                        />
                                         no, TBD</label
                                    >
                                </li>
                            </ul>
                        </div>
                    </section>
                    <div
                        class="flex flex-row items-center justify-between border-t pb-6 pr-8 pt-8">
                        <div class="flex flex-row items-center gap-2">
                            <h2 class="text-lg font-semibold">Call</h2>
                            <PhoneSVG />
                        </div>

                        <div>
                            <span
                                x-show="checkPre() === 0 && !leftMsg"
                                x-cloak
                                x-on:mouseover="$dispatch('hovercall')"
                                x-text="checkDuring()"
                                x-bind:class="checkDuring() === 0 ? 'bg-green-200 text-green-700' : 'bg-red-200 text-red-700'"
                                class="rounded-full px-4 py-1 text-sm"></span>
                        </div>
                    </div>
                    <p x-show="checkPre() !== 0">
                        Please complete the above Pre-Call section before
                        calling the patient.
                    </p>
                    <div
                        x-show="checkPre() === 0"
                        x-cloak
                        class="mb-8 select-none">
                        <label for="lm" class="p-1 pr-1.5">
                            <input
                                type="checkbox"
                                id="lm"
                                x-model="leftMsg"
                                class="-ml-1 mr-0.5"
                            />
                             No answer, left message
                        </label>
                    </div>
                    <section
                        x-show="checkPre() === 0 && !leftMsg"
                        x-cloak
                        class="grid grid-cols-1 gap-y-8 pr-8">
                        <div>
                            <h3
                                x-ref="callCapsuleAppt"
                                x-on:hovercall.window="warnCallCapsuleAppt()"
                                class="pb-2 font-medium">
                                Capsule
                            </h3>
                            <input
                                type="datetime-local"
                                step="900"
                                x-bind:min="today.toISO().substr(0, 16)"
                                x-on:change="$nextTick(() => { warnCallCapsuleAppt() })"
                                x-bind:class="capsuleApptInput ? 'text-black' : 'text-zinc-400'"
                                x-model="capsuleApptInput"
                                class="rounded border border-zinc-600 py-0.5 pl-2 pr-1 focus:text-black"
                            />
                        </div>
                        <div x-show="schedFu === 'yes'">
                            <h3
                                x-ref="callFuAppt"
                                x-on:hovercall.window="warnCallFuAppt()"
                                class="pb-2 font-medium">
                                Follow-up
                            </h3>
                            <div x-show="procApptInput" x-cloak class="pb-1">
                                <p class="text-zinc-500">
                                    3 weeks post proc is <span
                                        x-text="fuApptRec()"></span>
                                </p>
                            </div>
                            <input
                                type="datetime-local"
                                step="900"
                                x-bind:min="fuApptMin()"
                                x-on:change="$nextTick(() => { warnCallFuAppt() })"
                                x-bind:class="fuApptInput ? 'text-black' : 'text-zinc-400'"
                                x-model="fuApptInput"
                                class="rounded border border-zinc-600 py-0.5 pl-2 pr-1 focus:text-black"
                            />
                        </div>
                        <div>
                            <h3
                                x-ref="callSendInst"
                                x-on:hovercall.window="warnCallSendInst"
                                class="pb-2 font-medium">
                                Send Instructions
                            </h3>
                            <ul class="flex flex-row gap-8">
                                <li class="select-none">
                                    <label
                                        for="email"
                                        x-on:click="$nextTick(() => { warnCallSendInst() })"
                                        class="p-1 pr-1.5">
                                        <input
                                            type="radio"
                                            id="email"
                                            name="sendInst"
                                            value="email"
                                            x-on:click="$nextTick(() => { warnCallSendInst() })"
                                            x-model="sendInstMethod"
                                            class="-ml-1 mr-0.5"
                                        />
                                         email
                                    </label>
                                </li>
                                <li class="select-none">
                                    <label
                                        for="portal"
                                        x-on:click="$nextTick(() => { warnCallSendInst() })"
                                        class="p-1 pr-1.5">
                                        <input
                                            type="radio"
                                            id="portal"
                                            name="sendInst"
                                            value="portal"
                                            x-on:click="$nextTick(() => { warnCallSendInst() })"
                                            x-model="sendInstMethod"
                                            class="-ml-1 mr-0.5"
                                        />
                                         portal
                                    </label>
                                </li>
                                <li class="select-none">
                                    <label
                                        for="pickup"
                                        x-on:click="$nextTick(() => { warnCallSendInst() })"
                                        class="p-1 pr-1.5">
                                        <input
                                            type="radio"
                                            id="pickup"
                                            name="sendInst"
                                            value="pickup"
                                            x-on:click="$nextTick(() => { warnCallSendInst() })"
                                            x-model="sendInstMethod"
                                            class="-ml-1 mr-0.5"
                                        />
                                         pickup
                                    </label>
                                </li>
                                <li class="select-none">
                                    <label
                                        for="mail"
                                        x-on:click="$nextTick(() => { warnCallSendInst() })"
                                        class="p-1 pr-1.5">
                                        <input
                                            type="radio"
                                            id="mail"
                                            name="sendInst"
                                            value="mail"
                                            x-on:click="$nextTick(() => { warnCallSendInst() })"
                                            x-model="sendInstMethod"
                                            class="-ml-1 mr-0.5"
                                        />
                                         mail
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </section>
                </section>
                <section>
                    <section class="pb-8 pl-8">
                        <div class="flex flex-row items-center gap-2 pb-6">
                            <h2 class="text-lg font-semibold">Summary</h2>
                            <DocumentSVG />
                        </div>
                        <table class="ml-2">
                            <tr x-show="selectedProcs.length" x-cloak>
                                <td
                                    class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                    <h3
                                        x-text="(selectedProcs.length > 1) ? 'Procedures' : 'Procedure'"
                                        class="font-medium">
                                    </h3>
                                </td>
                                <td class="pb-2 align-text-top">
                                    <span x-text="joinProcs()"></span>
                                </td>
                            </tr>
                            <tr
                                x-show="(sedation && !sedationTBD) || sedationFinal"
                                x-cloak>
                                <td
                                    class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                    <h3 class="font-medium">Sedation</h3>
                                </td>
                                <td class="pb-2 align-text-top">
                                    <span x-text="selectedSedation()"></span>
                                </td>
                            </tr>
                            <tr x-show="prep" x-cloak>
                                <td
                                    class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                    <h3 class="font-medium">Colo Prep</h3>
                                </td>
                                <td class="pb-2 align-text-top">
                                    <span x-text="prep"></span>
                                </td>
                            </tr>
                            <tr
                                x-show="(facilityIndex && !facilityTBD) || facilityIndexFinal"
                                x-cloak>
                                <td
                                    class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                    <h3 class="font-medium">Facility</h3>
                                </td>
                                <td class="pb-2 align-text-top">
                                    <template x-if="selectedFacility">
                                        <ul class="space-y-1">
                                            <li x-text="selectedFacility.long">
                                            </li>
                                            <li
                                                x-text="selectedFacility.address">
                                            </li>
                                            <li
                                                x-text="selectedFacility.checkin">
                                            </li>
                                            <li
                                                x-show="selectedFacility.short == 'PRIME' && facilities[1].quote.trim() != '' ">
                                                Quote: $<span
                                                    x-text="facilities[1].quote"
                                                ></span>
                                                 (facility <span
                                                    x-text=" sedation === 'MAC' ? '+ anesthesia fees)' : 'fee)' "
                                                ></span>
                                            </li>
                                        </ul>
                                    </template>
                                </td>
                            </tr>
                            <tr x-show="procApptInput" x-cloak>
                                <td
                                    class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                    <h3 class="font-medium">Date</h3>
                                </td>
                                <td class="pb-2 align-text-top">
                                    <p class="pb-1">
                                        <span x-text="procApptDate()"></span> at


                                        <span x-text="procApptTime()"></span>
                                    </p>
                                    <p x-show="procApptArrival()">
                                        Arrive by <span
                                            x-text="procApptArrival()"></span>
                                    </p>
                                </td>
                            </tr>
                            <tr
                                x-show=" procs[0].selected && (facilityIndex === '0' || facilityIndexFinal === '0') "
                                x-cloak>
                                <td
                                    class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                    <h3 class="font-medium">COVID</h3>
                                </td>
                                <td class="pb-2 align-text-top">
                                    <p x-text="mosclCovid[1]"></p>
                                </td>
                            </tr>
                            <tr x-show="fuApptInput || fuTBD()" x-cloak>
                                <td
                                    class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                    <h3 class="font-medium">Follow-up</h3>
                                </td>
                                <td class="pb-2 align-text-top">
                                    <template x-if="fuApptInput">
                                        <p>
                                            <span x-text="fuApptDate()"></span>
                                             at <span x-text="fuApptTime()"
                                            ></span>
                                        </p>
                                    </template>
                                    <template x-if="fuTBD()">
                                        <p>
                                            Follow-up to be determined based on
                                            results of procedure.
                                        </p>
                                    </template>
                                </td>
                            </tr>
                        </table>
                        <div
                            x-show="instructions.length && !noInst"
                            x-cloak
                            class="pt-3">
                            <h3 class="pb-2 font-medium">
                                Additional instructions
                            </h3>
                            <ul>
                                <template
                                    x-for="inst in instructions"
                                    :key="inst.id">
                                    <li
                                        x-text="inst.body"
                                        class="break-words pb-1.5 pl-4 last:pb-0">
                                    </li>
                                </template>
                            </ul>
                        </div>
                    </section>
                    <section class="row-span-2 border-t pl-8 pt-4">
                        <div class="flex flex-row items-center gap-2 pb-6 pt-8">
                            <h2 class="text-lg font-semibold">Output</h2>
                            <ShareSVG />
                        </div>
                        <div
                            x-show="checkPre() === 0 && prepSent === 'no' && (checkDuring() === 0 || leftMsg)"
                            class="mb-8">
                            <h3 class="pb-2 font-medium">
                                Send <span x-text="prep"></span> Rx
                            </h3>
                            <ul>
                                <li class="select-none pb-1">
                                    <label for="rxFinalSent" class="p-1 pr-1.5">
                                        <input
                                            type="radio"
                                            id="rxFinalSent"
                                            value="sent"
                                            x-model="rxFinal"
                                            class="-ml-1 mr-0.5"
                                        />
                                         Sent Rx
                                    </label>
                                </li>
                                <li class="select-none pb-1">
                                    <label
                                        for="rxFinalForward"
                                        class="p-1 pr-1.5">
                                        <input
                                            type="radio"
                                            id="rxFinalForward"
                                            value="forward"
                                            x-model="rxFinal"
                                            class="-ml-1 mr-0.5"
                                        />
                                         Will send message/forward tele
                                    </label>
                                </li>
                            </ul>
                        </div>
                        <!-- grid -->
                        <div
                            x-show="checkPre() === 0 && (checkDuring() === 0 || leftMsg) && (procs[0].selected || (prep === 'ez2go' || (prepSent === 'yes' || rxFinal !== '')))"
                            x-cloak
                            class="grid grid-cols-1 gap-y-8">
                            <div x-show="!leftMsg">
                                <h3 class="mb-1 font-medium">Instructions</h3>
                                <!-- email template -->
                                <div x-show="sendInstMethod === 'email'">
                                    <p class="mb-2" x-text="sendInstMessage()">
                                    </p>
                                    <div
                                        class="rounded-md border border-zinc-300">
                                        <div
                                            class="rounded-t-md border-b border-zinc-300 bg-zinc-100">
                                            <div
                                                class="relative border-b border-zinc-300 py-2">
                                                <span
                                                    class="absolute bottom-2 left-6 text-zinc-300">
                                                    <EnvelopeSVG />
                                                </span>
                                                <h3
                                                    class="text-center text-sm text-zinc-800">
                                                    Email
                                                </h3>
                                            </div>
                                            <div
                                                class="flex flex-row items-center justify-between px-6 pb-2 pt-2.5">
                                                <div
                                                    class="flex flex-row gap-2">
                                                    <h3
                                                        class="text-sm font-light text-zinc-400">
                                                        Subject:
                                                    </h3>
                                                    <p
                                                        x-text="emailSubject()"
                                                        x-on:click="copyEmailSubject()"
                                                        class="cursor-pointer text-sm text-zinc-700 hover:text-black">
                                                    </p>
                                                </div>
                                                <button
                                                    title="Copy email subject"
                                                    x-on:click="copyEmailSubject()"
                                                    class="group">
                                                    <CopySVG />
                                                </button>
                                            </div>
                                        </div>
                                        <div class="px-6 py-4 text-sm">
                                            <template
                                                x-if="checkPre() === 0 && checkDuring() === 0">
                                                <p
                                                    x-html="emailBodyHtml()"
                                                    x-on:click="copyEmailBody()"
                                                    class="cursor-pointer text-zinc-700 hover:text-black">
                                                </p>
                                            </template>
                                        </div>
                                        <div
                                            class="flex flex-row items-center gap-6 px-6 py-0.5 pb-2">
                                            <button
                                                title="Copy email body"
                                                x-on:click="copyEmailBody()"
                                                class="group flex flex-row gap-1 rounded-md bg-zinc-200 px-2 py-1">
                                                <CopySVG />
                                                <span
                                                    class="text-sm text-zinc-700 group-hover:text-black"
                                                    >Copy</span
                                                >
                                            </button>
                                            <button
                                                title="Create PDF"
                                                x-on:click="window.print()"
                                                class="group flex flex-row gap-x-1 rounded-md">
                                                <PaperclipSVG />
                                                <span
                                                    class="text-sm text-zinc-700 group-hover:text-black"
                                                    >Instructions</span
                                                >
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div
                                    x-show="sendInstMethod !== 'email'"
                                    class="flex flex-row items-center justify-between gap-2">
                                    <p x-text="sendInstMessage()"></p>
                                    <button
                                        title="Create PDF"
                                        x-on:click="window.print()"
                                        class="group flex flex-row items-center gap-x-1 rounded-lg border bg-zinc-200 px-3 py-1 hover:bg-zinc-300">
                                        <PaperclipSVG />
                                        <span>Instructions</span>
                                    </button>
                                </div>
                            </div>
                            <!-- timestamp template -->
                            <div>
                                <h3 class="mb-2 font-medium">Notes</h3>
                                <table class="ml-2">
                                    <tr x-show="!leftMsg">
                                        <td
                                            class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                            <h3 class="font-medium">
                                                Order Reason
                                            </h3>
                                        </td>
                                        <td class="pb-2 align-text-top">
                                            <p
                                                x-text="DOS()"
                                                x-on:click="copyDOS()"
                                                class="cursor-pointer text-zinc-700 hover:text-black">
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td
                                            class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                            <h3 class="font-medium">
                                                Tele/Order
                                            </h3>
                                        </td>
                                        <td class="pb-2 align-text-top">
                                            <p
                                                x-show="!leftMsg"
                                                x-text="timestamp()"
                                                x-on:click="copyTimestamp()"
                                                class="cursor-pointer text-zinc-700 hover:text-black">
                                            </p>
                                            <p
                                                x-show="leftMsg"
                                                x-text="lmTS()"
                                                x-on:click="copyLmTS()"
                                                class="cursor-pointer text-zinc-700 hover:text-black">
                                            </p>
                                        </td>
                                    </tr>
                                    <tr x-show="!leftMsg">
                                        <td
                                            class="whitespace-nowrap pb-2 pr-6 align-text-top">
                                            <h3 class="font-medium">
                                                Appt Notes
                                            </h3>
                                        </td>
                                        <td class="pb-2 align-text-top">
                                            <p
                                                x-text="apptNotes()"
                                                x-on:click="copyApptNotes()"
                                                class="cursor-pointer text-zinc-700 hover:text-black">
                                            </p>
                                        </td>
                                    </tr>
                                </table>
                                <p x-show="procs[1].selected && !leftMsg">
                                    If screening colo (e.g. screening, h/o colon
                                    polyps, colon adenomas, etc), add the month
                                    and year of last colo to the appt reason.
                                </p>
                            </div>
                            <!-- staff to do -->
                            <div
                                x-show="!leftMsg && numDaysOut() < 14"
                                class="text-red-500">
                                <h3 class="mb-2 font-medium">Add-On Proc</h3>
                                <table class="ml-2">
                                    <tr x-show="numDaysOut() < 7">
                                        <td
                                            class="whitespace-nowrap pb-2 pr-6 align-text-top font-medium">
                                            Fax Docs
                                        </td>
                                        <td class="pb-2 align-text-top">
                                            Procedure is in less than 7 days.
                                            Send a chat message to fax necessary
                                            documents to
                                            <span
                                                x-text="selectedFacility.short"
                                            ></span>.
                                        </td>
                                    </tr>
                                    <tr x-show="numDaysOut() < 14">
                                        <td
                                            class="whitespace-nowrap pb-2 pr-6 align-text-top font-medium">
                                            Ins Verif
                                        </td>
                                        <td class="pb-2 align-text-top">
                                            Procedure is in less than 2 weeks.
                                            Send a chat message for procedure
                                            insurance verification.
                                        </td>
                                    </tr>
                                    <tr
                                        x-show="numDaysOut() < 14 && selectedFacility.short === 'PRIME'">
                                        <td
                                            class="whitespace-nowrap pb-2 pr-6 align-text-top font-medium">
                                            Prime Sched
                                        </td>
                                        <td class="pb-2 align-text-top">
                                            Procedure is in less than 2 weeks.
